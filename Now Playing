  <h1 id="nowPlaying">Live Station</h1>
  <button id="playBtn">‚ñ∂Ô∏è</button>
  <input type="range" id="volume" min="0" max="1" step="0.05" value="1">

  <!-- Hier komt de live audio stream -->
  <audio id="radioPlayer" src="LIVE_STREAM_URL" preload="auto"></audio>

  <script>
    const playBtn = document.getElementById('playBtn');
    const volume = document.getElementById('volume');
    const radioPlayer = document.getElementById('radioPlayer');
    const nowPlaying = document.getElementById('nowPlaying');

    playBtn.addEventListener('click', () => {
      if (radioPlayer.paused) {
        radioPlayer.play();
        playBtn.textContent = "‚è∏Ô∏è";
      } else {
        radioPlayer.pause();
        playBtn.textContent = "‚ñ∂Ô∏è";
      }
    });

    volume.addEventListener('input', () => {
      radioPlayer.volume = volume.value;
    });

    // Optioneel: "Now Playing" info uit jouw backend laden
    // Voorbeeld (fake data):
    nowPlaying.textContent = "Nu speelt: üé∂ David Guetta - Beautiful People";
  </script>

